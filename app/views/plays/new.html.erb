<%if flash[:errors] %>
    <% flash[:errors].each do |error| %>
   		<%= error %>
    <% end %>
<% end %>

<%= form_for @play do |f| %>
	<%= f.label :artist_id %> <br>
		<%= f.collection_select :artist_id, Artist.order(:name), :id, :name %><br>
	<br>
		<%= f.label :instrument_id %> <br>
		<%= f.collection_select :instrument_id, Instrument.order(:name), :id, :name %><br>
	<br>
	<%= f.submit %>
<% end %>